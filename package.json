{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "MERN Chat App",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",

    "install:backend": "cd backend && npm install --legacy-peer-deps",
    "install:frontend": "cd frontend && npm install --legacy-peer-deps",

    "build": "cd frontend && npm run build && cd ..",

    "postinstall": "npm run install:backend && npm run install:frontend && npm run build"
  },
  "keywords": [
    "mern",
    "chat-app"
  ],
  "author": "MJAIN",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.9",
    "socket.io": "^4.1.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "multer": "^2.0.2"
  } 
}
